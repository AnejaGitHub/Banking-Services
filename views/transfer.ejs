<%- include('partials/header') %>
<style>
  body {
    background-color: #f8f7f2;
    /* box-shadow : 3px 3px #e6e3d9; */
  }
</style>
<div class="container mt-5">
  <h1>Transfer</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/transfer" method="POST">
            <div class="form-group">
              <label for="senderEmail">Email</label>
              <input required type="email" class="form-control" name="senderEmail">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
              <label for="receiverEmail">Transfer To (email)</label>
              <input required type="email" class="form-control" name="receiverEmail">
            </div>
            <div class="form-group">
              <label for="amount">Amount</label>
              <input required type="number" class="form-control" name="amount">
            </div>
            <button type="submit" class="btn btn-dark">Transfer</button>
          </form>

          <a class="btn btn-light btn-lg" href="/register" role="button">Register</a>
          <a class="btn btn-dark btn-lg" href="home" role="button">Home</a>
        </div>
      </div>
    </div>


  </div>
</div>

<%- include('partials/header') %>
