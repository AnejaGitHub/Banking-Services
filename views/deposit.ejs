<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Deposit</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/deposit" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
              <label for="amount">Amount</label>
              <input required type="number" class="form-control" name="amount">
            </div>
            <button type="submit" class="btn btn-dark">Deposit</button>
          </form>

          <a class="btn btn-light btn-lg" href="/register" role="button">Register</a>
          <a class="btn btn-dark btn-lg" href="home" role="button">Home</a>
        </div>
      </div>
    </div>


  </div>
</div>

<%- include('partials/header') %>
